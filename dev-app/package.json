{
  "name": "dev-app",
  "description": "The demo application related to @logofx/aurelia-mvvm-plugin.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LogoFX/aurelia-mvvm-plugin.git"
  },
  "license": "MIT",
  "dependencies": {
    "@aurelia-ux/components": "^0.25.3",
    "@aurelia-ux/icons": "^0.25.3",
    "@aurelia-ux/modal": "^0.25.3",
    "@aurelia-ux/positioning": "^0.25.3",
    "@logofx/aurelia-mvvm-plugin": "^0.2.2",
    "aurelia-animator-css": "^1.0.4",
    "aurelia-bootstrapper": "^2.3.3",
    "aurelia-dialog": "^2.0.0",
    "aurelia-validation": "^2.0.0-rc1",
    "moment": "^2.29.1",
    "prismjs": "^1.24.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/jasmine": "^3.8.1",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/node": "^14.17.5",
    "@types/webpack": "^4.41.13",
    "app-settings-loader": "^1.0.6",
    "aurelia-cli": "^2.0.3",
    "aurelia-loader-nodejs": "^1.1.0",
    "aurelia-pal-nodejs": "^2.0.0",
    "aurelia-protractor-plugin": "^1.0.6",
    "aurelia-testing": "^1.0.0",
    "aurelia-webpack-plugin": "^4.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.2",
    "css-loader": "^3.6.0",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "expose-loader": "^0.7.5",
    "file-loader": "^6.2.0",
    "gulp": "^4.0.2",
    "gulp-protractor": "^4.1.1",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.2",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "jest-transform-stub": "^2.0.0",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^0.9.0",
    "minimatch": "^3.0.4",
    "promise-polyfill": "^8.2.0",
    "protractor": "^7.0.0",
    "rimraf": "^3.0.2",
    "style-loader": "^1.3.0",
    "through2": "^3.0.2",
    "tree-kill": "^1.2.2",
    "ts-jest": "^26.5.6",
    "ts-loader": "^7.0.5",
    "ts-node": "^10.1.0",
    "typescript": "^3.9.10",
    "url-loader": "^3.0.0",
    "vinyl-fs": "^3.0.3",
    "wait-on": "^5.3.0",
    "webpack": "^4.46.0",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "scripts": {
    "dev": "webpack-dev-server",
    "prebuild": "rimraf dist",
    "build": "webpack --env.production --extractCss",
    "start": "webpack-dev-server --extractCss",
    "build:dev": "webpack --extractCss",
    "analyze": "webpack --env.production --analyze",
    "test": "au test",
    "e2e": "au protractor",
    "e2e:headless": "au protractor --start --headless",
    "docker:build": "docker build -t dev-app:0.1.0 -t dev-app:latest .",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^aurelia-binding$": "<rootDir>/node_modules/aurelia-binding"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.spec\\.(ts|js)$",
    "setupFiles": [
      "<rootDir>/test/jest-pretest.ts"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/*.spec.{js,ts}",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
